# Financial RAG Evaluation - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Providers
# =============================================================================

# OpenAI API Key (required for GPT models and embeddings)
OPENAI_API_KEY=sk-...

# Anthropic API Key (required for Claude models)
ANTHROPIC_API_KEY=sk-ant-...

# Google Cloud (required for Gemini/Vertex AI)
# Set path to your service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=europe-west1

# =============================================================================
# Vector Databases
# =============================================================================

# ChromaDB (local persistence)
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
CHROMA_COLLECTION_NAME=financial_documents

# Qdrant (local or cloud)
QDRANT_HOST=localhost
QDRANT_PORT=6333
# QDRANT_API_KEY is optional for local Docker, required for Qdrant Cloud
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=financial_documents

# =============================================================================
# Embeddings
# =============================================================================

# OpenAI embedding model
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
